# === 基础应用配置 ===
APP_NAME=AI互动小说API
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, testing, production
DEBUG=true

# === 服务器配置 ===
HOST=0.0.0.0
PORT=20000
RELOAD=true

# === 安全配置 ===
SECRET_KEY=your-super-secret-key-here-change-in-production-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === 数据库配置 ===
# PostgreSQL (生产环境推荐)
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_novel
# SQLite (开发环境默认，无需配置)
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# === Redis配置 (可选) ===
# REDIS_URL=redis://localhost:6379
REDIS_EXPIRE_TIME=3600

# === AI服务配置 ===
GOOGLE_API_KEY=your-google-gemini-api-key-here
JINA_API_KEY=your-jina-ai-api-key-here
GEMINI_MODEL=gemini-pro
JINA_EMBEDDING_MODEL=jina-embeddings-v2-base-en

# === ChromaDB配置 ===
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=story_memory
VECTOR_DIMENSION=768
MAX_SEARCH_RESULTS=10

# === AI服务限制 ===
MAX_TOKENS_PER_REQUEST=4000
MAX_REQUESTS_PER_MINUTE=60
AI_TIMEOUT_SECONDS=30

# === 日志配置 ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=./logs/app.log  # 可选，不设置则仅输出到控制台

# === CORS配置 ===
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# === 文件上传配置 ===
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# === 开发环境特殊配置 ===
# 在开发环境中，以下配置会被自动设置：
# - 启用API文档 (/docs, /redoc)
# - 启用热重载
# - 使用彩色日志输出
# - 允许所有CORS源

# === 生产环境注意事项 ===
# 1. 必须设置强密码的SECRET_KEY
# 2. 设置ENVIRONMENT=production
# 3. 配置真实的数据库连接
# 4. 限制CORS_ORIGINS到具体域名
# 5. 设置LOG_FILE进行日志持久化
# 6. 考虑使用环境变量而非.env文件
